{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "voice-everlast",
  "version": "0.1.0",
"identifier": "com.voiceeverlast.desktop",


  "build": {
"frontendDist": "../out",
"devUrl": "http://localhost:3000",
"beforeDevCommand": "pnpm dev",
"beforeBuildCommand": "pnpm build"
  },

  "app": {
    "windows": [
      {
        "label": "main",
        "title": "voice-everlast",
        "width": 900,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "alwaysOnTop": true,
        "center": true,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
